    // This function runs the arm motor at a set speed.
    public void runArm() {
    	Robot.arm.armMotor.set(-0.5);
    }
   
    // This function runs the arm motor reversely at a set speed.
    public void reverseArm() {
    	Robot.arm.armMotor.set(0.5);
    }
   
    // This function stops the arm motor.
    public void stopArm() {
    	Robot.arm.armMotor.set(0);
    }
    
    // This function increases the arm motor slowly to full speed.
    public void rampDownArm(double speed) {
    	if (speed < 1) {
    		speed += 0.02;
    		armMotor.set(speed);
    		rampUpArm(speed);
    	}
    }
    
    // This function increases the arm motor slowly to full speed.
    public void rampUpArm(double speed) {
    	if (speed > -1) {
    		speed -= 0.02;
    		armMotor.set(speed);
    		rampDownArm(speed);
    	}
    }
}

